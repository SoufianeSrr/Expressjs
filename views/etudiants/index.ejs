<div style="margin-top: 60px" class="container">
  <h1>ACCUEIL</h1>
  <h2 style="margin-top: 80px;margin-left: 380px">List Des Etudiants</h2>
  <table style="margin-top: 20px" class="table table-dark table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>NOM</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
        <% etudiant.forEach(function(e){ %>
            <tr>
                <td><%= e.id %></td>
                <td><%= e.nom %></td>
                
                <td>
                    <a href="edit/<%= e.id %>" class="btn btn-sm btn-success">Edit</a>
                    <a href="delete/<%= e.id %>" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        <% }); %>
    </tbody>
  </table>
